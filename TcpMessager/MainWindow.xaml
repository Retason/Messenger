<Window x:Class="TcpMessager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TcpMessager"
        mc:Ignorable="d"
        Title="Super chat" Height="246" Width="384" Closing="Window_Closing" Background="#FF5B5B5B">
    <Grid>
        <ListBox x:Name="lb" HorizontalAlignment="Left" Width="88" BorderBrush="{x:Null}" Background="#4C007D57"/>
        <TextBox  x:Name="tbm" Margin="89,0,37,1" TextWrapping="Wrap"  VerticalAlignment="Bottom" Background="#FF8C8989" Template="{DynamicResource TB_Name}" Height="20" Foreground="White"/>
        <Button Content="Send" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Button_Click" Template="{DynamicResource ButtonTemplate1}" Margin="0,0,1,1" Background="#FF476D44" BorderBrush="#FF8A8A8A" Foreground="#FFC8C8C8"/>
        <TextBox IsEnabled="False" Name="tb" Margin="89,1,1,23" TextWrapping="Wrap" Template="{DynamicResource TB_Name}" Background="#4C007D57" SelectionBrush="White" BorderBrush="{x:Null}" Foreground="White" />

    </Grid>
</Window>
